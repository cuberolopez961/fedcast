---
import StreamingPlayer from "../StreamingPlayer/StreamingPlayer.astro";
import StreamingChat from "../StreamingChat/StreamingChat.astro";
import imageResource from "../../resources/avatar.jpg"
---

<div class="flex flex-row gap-2 p-5 max-h-[600px]">
    <section class="w-full md:w-3/4 h-auto rounded-md overflow-hidden">
        <StreamingPlayer />
    </section>
    <section class="w-full  flex flex-1 bg-zinc-700 rounded-md overflow-hidden">
        <StreamingChat />
    </section>
</div>

<div class="flex flex-row w-full">
    <div class="flex flex-1 flex-row gap-3 items-center p-5">
        <img class="border-4 border-red-500 bg-zinc-500 w-[80px] h-[80px] rounded-full" src={imageResource.src} >
        <div class="flex flex-col gap-1">
            <h3 class="text-lg text-white">Streaming title</h3>
            <span class="text-white text-sm">En directo</span>
        </div>
    </div>
    <div class="px-5 flex items-center justify-center">
        <a href="/" class="bg-red-500 px-3 py-2 hover:bg-red-600 text-black font-semibold rounded-md">Subscribirse</a>
    </div>
</div>